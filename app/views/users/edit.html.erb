<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      
      <h2>User info</h2>
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= @user.errors.count %>errors prohibited this obj from being saved:</h2>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with model:@user, local:true do |f| %>
        <div class="form-group">
          <label for="user_name">Name</label>
        </div>
        <%= f.text_field :name %>
        <div class="form-group">
          <label for="user_image">Image</label>
        </div>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
        <div class="form-group">
          <label for="user_introduction">Introduction</label>
        </div>
        <%= f.text_area :introduction %>
        <div class="form-group">
          <input type="submit" name="commit" value="Update User" class="btn btn-secondary" data-disable-with="Update User">
        </div>
      <% end %>
    </div>
  </div>
</div>