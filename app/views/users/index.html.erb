<h1>User info</h1>
<%= @user.profile_image_id %>
<table>
  <thead>
    <tr>
      <td>name</td>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <td>Introduction</td>
      <td><%= @user.introduction %></td>
    </tr>
  </thead>
</table>

<% if @user.id == current_user.id %>
  <p><%= link_to "プロフ編集", edit_user_path(@user) %></p>
<% end %>

<%= form_with model:@book, url:'/books', local:true do |f| %>
  <h1>New book</h1>
  <p>title</p>
  <%= f.text_field :title %>
  <p>Opinion</p>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>


<h1>Users</h1>
<table>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
    </tr>
  </thead>
  <% @users.each do |user| %>
  <tbody>
    <tr>
      <td><span><%= user.profile_image_id %></span></td>
      <td><span><%= user.name %></span></td>
      <td><span><%= link_to "show", user_path(user.id) %></span></td>
    </tr>
  </tbody>
    <% end %>
</table>